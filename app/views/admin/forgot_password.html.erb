
<table
  style="width: 100%; height: 100%;" cellpadding="0" cellspacing="0"
  id="table_login">
  <tr>
    <td align="center">

      <a href="/"><img src="/images/logo_company_login.png" alt="Logo company" border="0"/></a>
      
      <br /><br /><br />

       <% form_tag('/admin/delivery_password') do %>

      <table class="login_form" cellpadding="0" cellspacing="0">
        <tr>
          <td>
            <table style="width:350px; margin-left: 20px;">
              <tr>
                <td colspan="2" class="notice">
                  <%= flash[:notice] %>
                </td>
              </tr>
              <tr>
                <td style="width:100px;">
                  Username:
                </td>
                <td >
                  <%= text_field_tag :name, params[:name], :class=> "form_field", :style => "width:100%; padding: 5px;" %>
                </td>
              </tr>
              <tr>
                <td>
                  &nbsp;
                </td>
                <td style="text-align: right; color: #FFF">
                  <input type="submit"
                         name="entrar"
                         value="Send me a new password"
                         class="button" style="position: relative; left: 15px;"/> 
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
      <br /><br />
      <span style="color: #CCCCCC;">
        <%= system_footer %>
      </span>
      <% end %>

    </td>
  </tr>

</table>