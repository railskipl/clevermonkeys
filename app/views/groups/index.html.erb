<h1 class="grid_data">Listing Groups</h1>

<span class="button_grid_data">
  <%= link_to 'New Group', new_group_path, :class => "button" %>
</span>

<br /><br />
<table border=0 cellpadding=0 cellspacing=0 class="grid_data">
  <tr>
    <th>Description</th>
	<th width=1%>&nbsp;</th>
	<th width=1%>&nbsp;</th>
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%= link_to group.description, edit_group_path(group) %></td>
    <td><%= link_to "<img src='/images/permissions_icon.gif' border='0' />", group %></td>
    <td><%= link_to "<img src='/images/delete_icon.gif' border='0' />", group, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<span class="button_grid_data">
  <%= link_to 'New Group', new_group_path, :class => "button" %>
</span>