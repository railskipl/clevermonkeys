<table class="related_box" border="0" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <th valign="top"  width="1"><img src="/images/rounded_box_cse.png" alt="Rouded Image" /></th>
    <th style="padding:5px;" width="99%">

      <%= I18n.t "views.ticket.all.closed_tickets" %>

    </th>
    <th valign="top" align="right" width="1"><img src="/images/rounded_box_csd.png" alt="Rouded Image" /></th>
  </tr>

  <% @closed_tickets.each do |ticket|  %>

  <tr>
    <td>&nbsp;</td>
    <td style="text-align: right; padding: 10px;" >

      <table class="ticket_grid">
        <tr>
          <td style="width: 1%"><%= priority_generator(ticket.priority_id) %></td>
          <td style="text-align: left; width: 50%"><%= link_to "#{I18n.t "views.ticket.all.ticket"}: " + ticket.ticket_number.to_s, {:action => 'show', :id => ticket.id} %></td>
          <td style="width: 50%"><%= ticket.assignee %> | <%= ticket.created_at.strftime("%m/%d/%Y") %></td>
        </tr>
        <tr>
          <td valign="top">
            &nbsp;
          </td>
          <td style="text-align: left; font-weight: normal;" colspan="2">
            <%= truncate(ticket.subject, :length => 200) %>
          </td>
        </tr>
        <tr>
          <td align="center"><img src="/images/work_log.png" border="0" alt="worked time"/> </td>
          <td align="left"><%= Rufus.to_duration_string ticket.log_works.sum('time_spend') unless ticket.log_works.nil? %></td>
          <td style="" align="right">
            <%= ticket_status_generator(ticket) %>
          </td>
        </tr>
      </table>
    </td>
    <td>&nbsp;</td>
  </tr>

  <% end %>


  <tr class="footer">
    <td><img src="/images/rounded_box_cie.png" alt="Rouded Image" /></td>
    <td style="text-align: right; padding: 10px;" >
      &nbsp;
    </td>
    <td><img src="/images/rounded_box_cid.png" alt="Rouded Image" /></td>
  </tr>
</table>