<% form_for @comment, :html => { :multipart => 'true' } do |f| %>

  <table class="work_log_box"
         border="0"
         cellpadding="0"
         cellspacing="0"
         width="100%">
    <tr>
      <th valign="top"
          width="1"></th>
      <th style="padding:5px;"
          width="99%"><%= I18n.t 'views.ticket.show.comments.new_comment' %></th>
      <th valign="top"
          align="right"
          width="1"></th>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td>
        <%= I18n.t 'views.ticket.show.comments.subject' %>: <br/>
        <input type="text"
               style="width: 100%"
               name="comment[subject]"/>

        <input type="hidden"
               style="width: 100%"
               name="comment[ticket_id]"
               value="<%= @ticket.id %>"/>

        <br/>
        <%= I18n.t 'views.ticket.show.comments.message' %>:<br/>
        <textarea style="width:100%;"
                  rows="7"
                  name="comment[message]"
                  wrap="hard"></textarea>
        <br/>

      </td>
      <td>&nbsp;</td>
    </tr>

    <tr>
      <td>&nbsp;</td>
      <td id="insert_files_here">

      </td>
      <td>&nbsp;</td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td style="padding:10px 5px 10px 0px;">
        <a href="javascript:add_file_fields('insert_files_here');">
          <%= I18n.t 'views.ticket.show.comments.add_another_file' %>
        </a>
      </td>
      <td>&nbsp;</td>
    </tr>

    <tr>
      <td></td>
      <td>
        <input type="submit"
               name="submit"
               value="<%= I18n.t 'views.global.buttons.submit' %>"
               class="button"/> | 


        <a href="#" onclick="<%= remote_function(:update => "comment_form",
                                                :url => {
                                                    :action => :clear_comment,
                                                    :ticket_id => @ticket.id
                                                        }
                                                ) %>"><%= I18n.t 'views.global.buttons.cancel' %></a>
      </td>
      <td></td>
    </tr>

  </table>

<% end %>