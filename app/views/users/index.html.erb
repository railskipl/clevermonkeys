<h1 class="grid_data">Listing Users</h1>

<span class="button_grid_data">
  <%= link_to 'New User', new_user_path, :class => 'button' %>
</span>
<br /><br />

<table border=0 cellpadding=0 cellspacing=0 class="grid_data">
  <tr>
    <th width=1%>&nbsp;</th>
    <th>Name</th>
    <th>E-Mail</th>
    <th>Company</th>
    <th>Default Language</th>
    <th>Group</th>
    <th width=1%>&nbsp;</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td width=1%><%= image_tag user.photo.url(:small), :width => '45' %></td>
    <td><%= link_to user.display_name.nil? ? user.name : user.display_name, edit_user_path(user) %></td>
    <td><%= link_to user.email, edit_user_path(user) %></td>
    <td><%= link_to user.enterprise.name, edit_user_path(user) %></td>
    <td><%= link_to user.language.description, edit_user_path(user) %></td>
    <td><%= link_to user.group.description, edit_user_path(user) %></td>
    <td><%= link_to "<img src='/images/delete_icon.gif' border='0' />", user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

